<Window x:Class="ComputerGrafic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGrafic"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Background="White"
       
        KeyDown="Grid_KeyDown"
        
        Title="MainWindow" Height="450" Width="800">




    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition >
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True" Grid.Column="1">
            <StackPanel DockPanel.Dock="Right" Background="DarkGreen">
                <TextBlock>Текст1</TextBlock>
                <TextBlock Text="Текст2" />
                <ComboBox x:Name="colorComboBox" SelectionChanged="ColorComboBox_SelectionChanged" />
            </StackPanel>

        </DockPanel>
        <sharpGL:OpenGLControl MouseDown="Grid_MouseDown" x:Name ="OpenglControl_" OpenGLDraw="OpenGLControl_OpenGLDraw" OpenGLInitialized="OpenGLControl_OpenGLInitialized" Resized="OpenGLControl_Resized"/>
    </Grid>
</Window>
